<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Page">
    <jcr:content
        cq:allowedTemplates="[/conf/poc.htl.cif/settings/wcm/templates/landing-page]"
        cq:template="/conf/poc.htl.cif/settings/wcm/templates/root-page"
        jcr:primaryType="cq:PageContent"
        jcr:title="Site root page"
        sling:resourceType="poc.htl.cif/components/page">
        <root
            jcr:primaryType="nt:unstructured"
            sling:resourceType="poc.htl.cif/components/container">
            <container
                jcr:primaryType="nt:unstructured"
                sling:resourceType="poc.htl.cif/components/container">
                <title
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="poc.htl.cif/components/title"/>
                <container
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="poc.htl.cif/components/container"
                    layout="responsiveGrid"/>
            </container>
        </root>
    </jcr:content>
</jcr:root>
